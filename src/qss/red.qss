QWidget#MemoWidget, #contentView {
    background-color: #E84E40;
}

QPushButton {
    border-radius: 15px;
    width: 30px;
    height: 30px;
    padding: 0px;
    margin: 5px;
}

QPushButton#closeBtn:hover, #newBtn:hover, #pinBtn:hover, #editBtn:hover {
    background-color: #FEF4BF;
    border-radius: 15px;
    width: 30px;
    height: 30px;
    padding: 0px;
    margin: 0px;
}

QFrame {
    border-radius: 15px;
    background-color: #F9BDBB;
}

QPushButton#colorBtns {
    border: 1px solid #E3C46F;
    border-radius: 15px;
    width: 30px;
    height: 30px;
    padding: 0px;
    margin: 0px;
}

QPlainTextEdit {
    background-color: #F9BDBB;
    border-radius: 10px;
    border: 1px solid #E3C46F;
}
